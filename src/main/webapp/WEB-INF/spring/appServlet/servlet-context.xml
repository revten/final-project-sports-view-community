		<beans:property name="maxInMemorySize" value="10485760" />
	</beans:bean>
	
	<beans:bean id="so" class="com.tm.nmp.games.SiteOption">
			<beans:constructor-arg value="3"></beans:constructor-arg>
	</beans:bean>
</beans:beans>